{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "./dist",
    "baseUrl": "src/",
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
